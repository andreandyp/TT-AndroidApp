<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="fragments.Datos2Fragment">

    <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:text="@string/conocer"
            android:textAlignment="center"
            android:textColor="#009688"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSiguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/siguiente"
            app:layout_constraintBottom_toTopOf="@+id/guideline7"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/txtPresupuesto" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />

    <ImageView
            android:id="@+id/imPersonalidad"
            android:layout_width="31dp"
            android:layout_height="51dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/descipcionIMNombre"
            android:src="@drawable/personality"
            app:layout_constraintEnd_toStartOf="@+id/spnPersonalidad"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
            android:contentDescription="@string/descipcionIMEdad"
            android:id="@+id/imPresupuesto"
            android:layout_width="31dp"
            android:layout_height="51dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/txtPresupuesto"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/imPersonalidad"
            app:srcCompat="@drawable/moneybag" />

    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/txtPresupuesto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/tagPresupuesto"
            app:layout_constraintBottom_toBottomOf="@+id/imPresupuesto"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toEndOf="@+id/imPresupuesto"
            app:layout_constraintTop_toTopOf="@+id/imPresupuesto">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etxtPresupuesto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
            android:id="@+id/spnPersonalidad"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:prompt="@string/ListaPersonalidad"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="@+id/imPersonalidad"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toEndOf="@+id/imPersonalidad"
            app:layout_constraintTop_toTopOf="@+id/imPersonalidad" />

</androidx.constraintlayout.widget.ConstraintLayout>
